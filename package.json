{
	"name": "macro-lab",
	"displayName": "Office Macro Laboratory",
	"description": "A simple laboratory to analyze Office Macros",
	"version": "0.0.5",
	"engines": {
		"vscode": "^1.53.0"
	},
	"author": {
        "name": "Samuel Garces"
    },
	"publisher": "secsamdev",
	"categories": [
		"Visualization",
		"Formatters",
		"Programming Languages"
	],
	"activationEvents": [
        "workspaceContains:**/*.doc",
        "workspaceContains:**/*.docx",
		"workspaceContains:**/*.docm",
        "onFileSystem:doc",
        "onFileSystem:docx",
        "onFileSystem:docm",
		"onCommand:macrolab.openOfficeDocument"
    ],
	"contributes": {
		"commands": [{
			"command": "macrolab.openOfficeDocument",
			"title": "Analyze Office Document",
			"category": "Macro Lab"
		}],
		"menus": {
			"explorer/context": [
				{
					"command": "macrolab.openOfficeDocument",
					"group": "navigation"
				}
			]
		}
	},
	"main": "./src/mod.js",
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"dependencies": {
		"unzipper": "^0.10.11"
	},
	"devDependencies": {
		"@types/vscode": "^1.53.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"eslint": "^7.19.0",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0"
	},
	"repository": {
        "type": "git",
        "url": "https://github.com/SecSamDev/vscode-office-macro.git"
    }
}
